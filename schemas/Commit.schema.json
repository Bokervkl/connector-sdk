{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://platform.codeclimate.com/schemas/commit",
  "type": "object",
  "additonalProperties": false,
  "title": "Commit",
  "description": "A commit.",
  "properties": {
    "_type": {
      "type": "string",
      "const": "Commit"
    },
    "id": {
      "description": "The unique ID of this commit.",
      "type": "string"
    },
    "self": {
      "description": "The canonical URI for this record.",
      "type": "string",
      "format": "uri"
    },
    "author": {
      "description": "The `self` URI of the Author this test commit to, or a nested Author record.",
      "oneOf": [
        { "$ref": "https://platform.codeclimate.com/schemas/actor" },
        { "type": "string", "format": "uri" }
      ]
    },
    "committer": {
      "description": "The `self` URI of the Committer this test commit to, or a nested Committer record.",
      "oneOf": [
        { "$ref": "https://platform.codeclimate.com/schemas/actor" },
        { "type": "string", "format": "uri" }
      ]
    },
    "message": {
      "description": "The commit message.",
      "type": "string"
    },
    "tree": {
      "description": "The commit tree.",
      "type": "string"
    },
    "parents": {
      "description": "The canonical URI for this record.",
      "type": "array",
      "items": { "type": "string" }
    },
    "statistics": {
      "description": "Commit statistics.",
      "type": "object",
      "properties": {
        "id": {
          "description": "The id of the statistics.",
          "type": "string"
        },
        "type": {
          "description": "What type of statistic this is.",
          "type": "string"
        },
        "additions": {
          "description": "Lines of code added in this commit.",
          "type": "integer"
        },
        "deletions": {
          "description": "Lines of code deleted in this commit.",
          "type": "integer"
        },
        "total": {
          "description": "Total lines of code in this commit.",
          "type": "integer"
        }
      },
      "required": [ "_type", "id", "type" ]
    }
  },
  "required": [ "id", "self" ]
}
