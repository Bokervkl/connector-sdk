{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://platform.codeclimate.com/schemas/commit-check",
  "type": "object",
  "additonalProperties": false,
  "title": "CommitCheck",
  "description": "A status rendered on a Commit e.g. from a CI/CD or code quality tool.",
  "properties": {
    "_type": {
      "type": "string",
      "const": "CommitCheck"
    },
    "id": {
      "description": "The unique ID of this CommitCheck.",
      "type": "string"
    },
    "self": {
      "description": "The canonical URI for this record.",
      "type": "string",
      "format": "uri"
    },
    "avatarUrl": {
      "description": "An avatar for this CommitCheck.",
      "type": "string",
      "format": "uri"
    },
    "commitOid": {
      "description": "The oid of the Commit associated with this CommitCheck.",
      "type": "string"
    },
    "context": {
      "description": "The context of the CommitCheck",
      "type": "string"
    },
    "state": {
      "description": "The state of the CommitCheck",
      "type": "string",
      "enum": ["passed", "failed"]
    },
    "description": {
      "description": "The description of this CommitCheck",
      "type": "integer"
    },
    "createdAt": {
      "description": "The time the commit check was created",
      "type": "string",
      "format": "date-time"
    },
    "creator": {
      "description": "The `self` URI of the related Actor, or a nested Actor record.",
      "oneOf": [
        { "$ref": "https://platform.codeclimate.com/schemas/actor" },
        { "type": "string", "format": "uri" }
      ]
    },
    "targetUrl": {
      "description": "Target url.",
      "type": "string",
      "format": "uri"
    }
  },
  "required": [ "_type", "id", "self", "commitOid", "context", "state" ]
}
