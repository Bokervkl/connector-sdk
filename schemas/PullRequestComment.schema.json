{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://platform.codeclimate.com/schemas/pull-request-comment",
  "type": "object",
  "additonalProperties": false,
  "title": "PullRequestComment",
  "description": "A Pull Request Event is an event that's related to a Pull Request.",
  "properties": {
    "_type": {
      "type": "string",
      "const": "PullRequestComment"
    },
    "id": {
      "description": "The unique ID of this PullRequestComment",
      "type": "string"
    },
    "self": {
      "description": "The canonical URI for this record",
      "type": "string",
      "format": "uri"
    },
    "pullRequest": {
      "description": "The `self` URI of the PullRequest, or a nested PullRequest record.",
      "oneOf": [
        { "$ref": "https://platform.codeclimate.com/schemas/pull-request" },
        { "type": "string", "format": "uri" }
      ]
    },
    "pullRequestReview": {
      "description": "The `self` URI of the PullRequestReview, or a nested PullRequestReview record.",
      "oneOf": [
        { "$ref": "https://platform.codeclimate.com/schemas/pull-request-review" },
        { "type": "string", "format": "uri" }
      ]
    },
    "author": {
      "description": "The `self` URI of the Actor, or a nested Actor record.",
      "oneOf": [
        { "$ref": "https://platform.codeclimate.com/schemas/actor" },
        { "type": "string", "format": "uri" }
      ]
    },
    "body": {
      "description": "The body of this PullRequestComment",
      "type": "string"
    },
    "bodyHtml": {
      "description": "The html of this PullRequestComment",
      "type": "string"
    },
    "bodyText": {
      "descrtiption": "The text of this PullRequestComment",
      "type": "string"
    },
    "state": {
      "description": "The type of PullRequestComment",
      "type": "string"
    },
    "path": {
      "description": "The path of this PullRequestComment",
      "type": "string"
    },
    "position": {
      "description": "The position of this PullRequestComment",
      "type": "integer"
    },
    "outdated": {
      "description": "Whether the PullRequestComment is outdated",
      "type": "boolean"
    },
    "publishedAt": {
      "description": "The time PullRequestComment was published",
      "type": "string",
      "format": "date-time"
    },
    "draftedAt": {
      "description": "The time PullRequestComment was drafted",
      "type": "string",
      "format": "date-time"
    },
    "createdAt": {
      "description": "The time PullRequestComment was created",
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "description": "The time PullRequestComment was updated",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [ "_type", "id", "self" ]
}
