{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://platform.codeclimate.com/schemas/issue-changelog",
  "type": "object",
  "additonalProperties": false,
  "title": "IssueChangelog",
  "description": "Changes between Issues.",
  "properties": {
    "type": {
      "type": "string",
      "const": "IssueChangelog"
    },
    "id": {
      "description": "The unique ID of this IssueChangelog",
      "type": "string"
    },
    "self": {
      "description": "The canonical URI for this record",
      "type": "string",
      "format": "uri"
    },
    "title": {
      "description": "The human-readable title of this IssueChangelog",
      "type": "string"
    },
    "htmlUrl": {
      "description": "The URL for a human to view this IssueChangelog",
      "type": "string",
      "format": "uri"
    },
    "status": {
      "description": "The status of this IssueChangelog",
      "enum": ["triggered", "acknowledged", "resolved"]
    },
    "description": {
      "description": "The description IssueChangelog",
      "type": "string"
    },
    "from": {
      "description": "The from IssueChangelog",
      "type": "string"
    },
    "to": {
      "description": "The to IssueChangelog",
      "type": "string"
    },
    "author": {
      "description": "The `self` URI of the Author, or a nested Author record.",
      "oneOf": [
        { "$ref": "https://platform.codeclimate.com/schemas/actor" },
        { "type": "string", "format": "uri" }
      ]
    },
    "createdAt": {
      "description": "The time this IssueChangelog began",
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "description": "The time this IssueChangelog was last updated.",
      "type": "string",
      "format": "date-time"
    },
    "deletedAt": {
      "description": "The time this IssueChangelog was deleted.",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "_type", "id", "self", "title", "status", "createdAt"
  ]
}

